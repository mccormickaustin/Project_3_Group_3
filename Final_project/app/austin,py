import os

def find_csv_path(filename="cleaned_games.csv"):
    """
    Tries to find the absolute path of a CSV file by checking common locations
    relative to the script's directory.

    Args:
        filename (str): The name of the CSV file to find.

    Returns:
        str or None: The absolute path of the file if found, otherwise None.
    """
    script_dir = os.path.dirname(os.path.abspath(__file__))

    # Check in the same directory as the script
    filepath = os.path.join(script_dir, filename)
    if os.path.exists(filepath):
        return filepath

    # Check in a 'data' subdirectory within the script's directory
    filepath = os.path.join(script_dir, "data", filename)
    if os.path.exists(filepath):
        return filepath

    # Check in a 'data' subdirectory one level up from the script's directory
    filepath = os.path.join(script_dir, "..", "data", filename)
    if os.path.exists(filepath):
        return filepath

    # Add more potential paths here if your project has a different structure

    return None

if __name__ == "__main__":
    csv_file = "cleaned_games.csv"
    path = find_csv_path(csv_file)
    if path:
        print(f"Found '{csv_file}' at: {path}")
    else:
        print(f"Could not find '{csv_file}' in common locations.")